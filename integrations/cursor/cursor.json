{
  "name": "token-metrics-api",
  "version": "1.0.0",
  "description": "Token Metrics AI API for cryptocurrency ratings, factors, and sentiment analysis",
  "publisher": "Token Metrics",
  "main": "index.js",
  "icon": "https://tokenmetrics.com/icon.png",
  "categories": ["AI Tools", "Finance", "Cryptocurrency"],
  "authentication": {
    "type": "oauth2",
    "authorizationUrl": "https://api.tokenmetrics.com/v2/oauth/authorize",
    "tokenUrl": "https://api.tokenmetrics.com/v2/oauth/token",
    "scopes": ["ratings:read", "factors:read", "sentiment:read"]
  },
  "api": {
    "baseUrl": "https://api.tokenmetrics.com/v2",
    "endpoints": [
      {
        "name": "getRatings",
        "description": "Get cryptocurrency ratings",
        "path": "/ratings",
        "method": "GET",
        "parameters": [
          {
            "name": "symbol",
            "type": "string",
            "description": "Token symbol (e.g., 'BTC')",
            "required": true
          },
          {
            "name": "startDate",
            "type": "string",
            "description": "Start date in YYYY-MM-DD format",
            "required": false
          },
          {
            "name": "endDate",
            "type": "string",
            "description": "End date in YYYY-MM-DD format",
            "required": false
          }
        ]
      },
      {
        "name": "getFactors",
        "description": "Get cryptocurrency factors",
        "path": "/factors",
        "method": "GET",
        "parameters": [
          {
            "name": "symbol",
            "type": "string",
            "description": "Token symbol (e.g., 'BTC')",
            "required": true
          },
          {
            "name": "startDate",
            "type": "string",
            "description": "Start date in YYYY-MM-DD format",
            "required": false
          },
          {
            "name": "endDate",
            "type": "string",
            "description": "End date in YYYY-MM-DD format",
            "required": false
          }
        ]
      },
      {
        "name": "getSentiment",
        "description": "Get cryptocurrency sentiment",
        "path": "/sentiment",
        "method": "GET",
        "parameters": [
          {
            "name": "symbol",
            "type": "string",
            "description": "Token symbol (e.g., 'BTC')",
            "required": true
          },
          {
            "name": "startDate",
            "type": "string",
            "description": "Start date in YYYY-MM-DD format",
            "required": false
          },
          {
            "name": "endDate",
            "type": "string",
            "description": "End date in YYYY-MM-DD format",
            "required": false
          }
        ]
      }
    ]
  },
  "samples": [
    {
      "name": "Get Bitcoin Ratings",
      "description": "Retrieve the latest ratings for Bitcoin",
      "code": "const ratings = await tokenMetricsApi.getRatings({ symbol: 'BTC' });\nconsole.log(ratings);"
    },
    {
      "name": "Get Ethereum Factors",
      "description": "Retrieve the factors for Ethereum over a date range",
      "code": "const factors = await tokenMetricsApi.getFactors({ symbol: 'ETH', startDate: '2023-01-01', endDate: '2023-01-31' });\nconsole.log(factors);"
    }
  ]
}
